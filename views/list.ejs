<%- include('header'); -%>

<div class="box" id="heading">
            <h1 style="color:aqua"><%= ListTitle %> ToDo List</h1>
        </div>
        <div class="box">
            <% newListItem.forEach(element => { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= element %></p>
                </div>
            <% }); %> 
            
            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="New ToDoList" autocomplete="off">
                <button type="submit" name="button" value="<%= ListTitle %>">+</button>
            </form>
        </div>

<%- include('footer'); -%>